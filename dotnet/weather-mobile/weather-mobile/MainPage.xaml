<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="weather_mobile.MainPage">

    <StackLayout>
        <Frame BackgroundColor="#2196F3" Padding="24" CornerRadius="0">
            <Label Text="Weather Forecast" HorizontalTextAlignment="Center" TextColor="White" FontSize="36"/>
        </Frame>
        <Label Text="Wednesday" FontAttributes="Bold" HorizontalTextAlignment="Center" FontSize="Title" Padding="30,10,30,10"/>
        <Image Source="https://cdn.onlinewebfonts.com/svg/img_249190.png" />
        <Label Text="Mostly cloudy with a high of 85." HorizontalTextAlignment="Center" FontSize="20" Padding="30,0,30,0"/>
    </StackLayout>

</ContentPage>
